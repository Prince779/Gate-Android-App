<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B4B0B1"
    tools:context="com.example.prince.g_app.MainActivity">

    <com.google.android.youtube.player.YouTubePlayerView
        android:layout_width="450dp"
        android:layout_height="250dp"
        class="com.google.android.youtube.player.YouTubePlayerView"
        android:id="@+id/youtube_view"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:id="@+id/now"
        android:text="Now Playing "
        android:layout_marginTop="7dp"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:layout_below="@+id/youtube_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/nowim"
        android:src="@mipmap/now_playing"
        android:layout_below="@+id/now"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv"
        android:layout_below="@+id/now"
        android:layout_toRightOf="@+id/nowim"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
